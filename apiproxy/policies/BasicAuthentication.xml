<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<BasicAuthentication name="BasicAuthentication" async="false" continueOnError="false" enabled="true">
    <DisplayName>SetBasicAuthenticationTarget</DisplayName>
    <Operation>Encode</Operation>
    <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    <User ref="private.username"/>
    <Password ref="private.password"/>
    <AssignTo createNew="true">request.header.Authorization</AssignTo>
    <Source>request.header.Authorization</Source>
</BasicAuthentication>