<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="Set-variables">
    <DisplayName>Set variables</DisplayName>
    <Properties/>
    <Add>
        <Headers>
            <Header name="x-secret-answer">{private.secretAnswer}</Header>
            <Header name="x-company">{company}</Header>
        </Headers>
    </Add>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo type="request" transport="http" createNew="false"/>
</AssignMessage>